<% layout('layouts/boilerplate') %>
	<!-- CSS -->
	<link rel="stylesheet" href="/stylesheets/recipes.css">

	<div id="content" class="d-flex flex-column align-items-center">
		<div class="col-md-8 col-xl-6">
			<div class="embed-responsive embed-responsive-16by9 border-black-1 rounded">
				<iframe class="embed-responsive-item" src="<%= recipe.youtubeURL %>" frameborder="0"
					allow="accelerometer; autoplay; clipboard-write; encrypted-media; gyroscope; picture-in-picture"
					allowfullscreen></iframe>
			</div>
			<hr>
		</div>
		<div class="">
			<h1>
				<%= recipe.name %>
			</h1>
		</div>
		<div class="d-flex flex-column align-self-start mx-5">
			<div>
				<h2>Ingredients</h2>
				<ul>
					<% recipe.ingredients.forEach(function(ingredient){ %>
						<li>
							<%= ingredient %>
						</li>
						<% }); %>
				</ul>
				<h2>Directions</h2>
				<ol>
					<% recipe.directions.forEach(function(direction){ %>
						<li>
							<%= direction %>
						</li>
						<% }); %>
				</ol>
			</div>
		</div>
	</div>